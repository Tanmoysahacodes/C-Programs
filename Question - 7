#include <stdio.h>
#include <stdlib.h>

int main()
{
    int *arr;
    int n1, n2, i;

    // Step 1: Enter initial size
    printf("Enter initial size (n1): ");
    scanf("%d", &n1);

    // Allocate memory dynamically
    arr = (int *)malloc(n1 * sizeof(int));

    if (arr == NULL)
    {
        printf("Memory allocation failed!\n");
        return 0;
    }

    // Step 2: Input first n1 elements
    printf("Enter %d elements:\n", n1);
    for (i = 0; i < n1; i++)
    {
        scanf("%d", &arr[i]);
    }

    // Step 3: Expand array
    printf("Enter additional size (n2): ");
    scanf("%d", &n2);

    arr = (int *)realloc(arr, (n1 + n2) * sizeof(int));

    if (arr == NULL)
    {
        printf("Memory reallocation failed!\n");
        return 0;
    }

    // Step 4: Input next n2 elements
    printf("Enter %d more elements:\n", n2);
    for (i = n1; i < n1 + n2; i++)
    {
        scanf("%d", &arr[i]);
    }

    // Step 5: Print all elements
    printf("Final array elements:\n");
    for (i = 0; i < n1 + n2; i++)
    {
        printf("%d ", arr[i]);
    }

    // Free memory
    free(arr);

    return 0;
}
