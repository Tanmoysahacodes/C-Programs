#include <stdio.h>
#include <string.h>

// Function to count frequency of a character
int charFrequency(char str[], char ch)
{
    int i, count = 0;

    for (i = 0; str[i] != '\0'; i++)
    {
        if (str[i] == ch)
        {
            count++;
        }
    }
    return count;
}

// Function to count number of words
int wordCount(char str[])
{
    int i, count = 0;

    for (i = 0; str[i] != '\0'; i++)
    {
        if (str[i] == ' ')
        {
            count++;
        }
    }

    if (strlen(str) == 0)
        return 0;
    else
        return count + 1;
}

int main()
{
    char str[200];
    char ch;
    int i;

    printf("Enter a string: ");
    fgets(str, sizeof(str), stdin);

    // Remove newline
    str[strcspn(str, "\n")] = '\0';

    printf("Enter character to find frequency: ");
    scanf("%c", &ch);

    printf("Frequency of '%c' = %d\n", ch, charFrequency(str, ch));

    printf("Number of words = %d\n", wordCount(str));

    printf("\nFrequency of each alphabet:\n");

    for (i = 'a'; i <= 'z'; i++)
    {
        int count = charFrequency(str, i) + charFrequency(str, i - 32);
        if (count > 0)
            printf("%c = %d\n", i, count);
    }

    return 0;
}
