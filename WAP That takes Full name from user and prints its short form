#include <stdio.h>

void printShortName(char name[])
{
    int i;
    int lastSpaceIndex = -1;

    // Find the position of the last space
    for (i = 0; name[i] != '\0'; i++)
    {
        if (name[i] == ' ')
            lastSpaceIndex = i;
    }

    // If no space, single word
    if (lastSpaceIndex == -1)
    {
        printf("%s", name);
        return;
    }

    // Print initials (characters after space, before last word)
    printf("%c ", name[0]); // first initial

    for (i = 1; i < lastSpaceIndex; i++)
    {
        if (name[i - 1] == ' ')
            printf("%c ", name[i]);
    }

    // Print last name fully
    for (i = lastSpaceIndex + 1; name[i] != '\0'; i++)
    {
        printf("%c", name[i]);
    }
}

int main()
{
    char name[100];

    printf("Enter full name: ");
    fgets(name, sizeof(name), stdin);

    // Remove newline
    for (int i = 0; name[i] != '\0'; i++)
    {
        if (name[i] == '\n')
        {
            name[i] = '\0';
            break;
        }
    }

    printShortName(name);

    return 0;
}
