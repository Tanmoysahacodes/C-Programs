#include <stdio.h>
#include <string.h>

void formatName(char name[])
{
    int i = 0;

    // Print first initial
    printf("%c. ", name[0]);

    // Traverse the string
    while (name[i] != '\0')
    {

        // If space found and next character is not end
        if (name[i] == ' ' && name[i + 1] != '\0')
        {

            // Check if it is middle name or last name
            int j = i + 1;
            while (name[j] != ' ' && name[j] != '\0')
            {
                j++;
            }

            // If another space exists â†’ middle name
            if (name[j] == ' ')
            {
                printf("%c. ", name[i + 1]);
            }
            else
            {
                // Last name
                printf("%s", &name[i + 1]);
                break;
            }
        }
        i++;
    }
}

int main()
{
    char name[100];

    printf("Enter full name: ");
    fgets(name, sizeof(name), stdin);

    // Remove newline if present
    name[strcspn(name, "\n")] = '\0';

    printf("Formatted Name: ");
    formatName(name);

    return 0;
}
