#include <stdio.h>

// Function using call by reference
void increase(int *num)
{
    (*num)++; // Increase value by 1
}

int main()
{
    int value;

    printf("Enter a number: ");
    scanf("%d", &value);

    printf("Before function call: %d\n", value);

    increase(&value); // Passing address (reference)

    printf("After function call: %d\n", value);

    return 0;
}
