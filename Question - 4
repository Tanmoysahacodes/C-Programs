#include <stdio.h>

// Function Prototypes
void menu();
void input(int arr[], int n);
int sum(int arr[], int n);
float average(int arr[], int n);
int min(int arr[], int n);
int max(int arr[], int n);
void display(int arr[], int n);

int main()
{
    int arr[100];
    int n, choice;

    printf("Enter number of elements: ");
    scanf("%d", &n);

    do
    {
        menu();
        printf("Enter your choice: ");
        scanf("%d", &choice);

        switch (choice)
        {
        case 1:
            input(arr, n);
            break;
        case 2:
            printf("Sum = %d\n", sum(arr, n));
            break;
        case 3:
            printf("Average = %.2f\n", average(arr, n));
            break;
        case 4:
            printf("Minimum = %d\n", min(arr, n));
            break;
        case 5:
            printf("Maximum = %d\n", max(arr, n));
            break;
        case 6:
            display(arr, n);
            break;
        case 7:
            printf("Exiting program...\n");
            break;
        default:
            printf("Invalid choice!\n");
        }

    } while (choice != 7);

    return 0;
}

// Function Definitions

void menu()
{
    printf("\n---- MENU ----\n");
    printf("1. Input Elements\n");
    printf("2. Sum\n");
    printf("3. Average\n");
    printf("4. Minimum\n");
    printf("5. Maximum\n");
    printf("6. Display\n");
    printf("7. Exit\n");
}

void input(int arr[], int n)
{
    int i;
    printf("Enter %d elements:\n", n);
    for (i = 0; i < n; i++)
    {
        scanf("%d", &arr[i]);
    }
}

int sum(int arr[], int n)
{
    int i, total = 0;
    for (i = 0; i < n; i++)
    {
        total += arr[i];
    }
    return total;
}

float average(int arr[], int n)
{
    return (float)sum(arr, n) / n;
}

int min(int arr[], int n)
{
    int i, minimum = arr[0];
    for (i = 1; i < n; i++)
    {
        if (arr[i] < minimum)
            minimum = arr[i];
    }
    return minimum;
}

int max(int arr[], int n)
{
    int i, maximum = arr[0];
    for (i = 1; i < n; i++)
    {
        if (arr[i] > maximum)
            maximum = arr[i];
    }
    return maximum;
}

void display(int arr[], int n)
{
    int i;
    printf("Array elements are:\n");
    for (i = 0; i < n; i++)
    {
        printf("%d ", arr[i]);
    }
    printf("\n");
}
